@using WebShop.Models.Product
@using WebShop.Resources
@model IEnumerable<WebShop.Models.Product.ProductViewModel>

@{
    ViewBag.Title = "Products";
}

<h2>@ProductListResources.Title</h2>
@Html.ActionLink(@SharedResources.CreateButton, "CreateProduct", "AddProduct", routeValues: null, htmlAttributes: new {@class="btn btn-primary", @role = "button"})

<div class="row">
    @foreach (ProductViewModel product in Model)
    {
        @await Html.PartialAsync("Products/ProductItemInfo", product)
    }
</div>